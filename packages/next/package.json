{
  "name": "@gatsby-tv/next",
  "description": "Next utilities and components for Gatsby.",
  "version": "0.4.1",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "yarn run build:tsc && yarn run build:babel",
    "build:tsc": "tsc --emitDeclarationOnly",
    "build:babel": "babel lib --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "eslint src",
    "types": "tsc --noEmit"
  },
  "dependencies": {
    "core-js": "^3.7.0"
  },
  "peerDependencies": {
    "@gatsby-tv/components": "*",
    "@gatsby-tv/types": "^0.4.6",
    "@gatsby-tv/utilities": "*",
    "next": "^10.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "swr": "^0.5.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-private-methods": "^7.12.1",
    "@babel/plugin-proposal-private-property-in-object": "^7.12.1",
    "@babel/plugin-transform-object-assign": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@gatsby-tv/components": "workspace:packages/components",
    "@gatsby-tv/types": "^0.4.7",
    "@gatsby-tv/utilities": "workspace:packages/utilities",
    "@types/react": "^16.9.43",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.16.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "next": "^10.0.1",
    "next-transpile-modules": "^6.3.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "swr": "^0.5.3",
    "typescript": "^4.0.5",
    "webpack": "^5.21.2"
  }
}

{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2019"],
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": { "@src/*": ["*"] },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "files": ["src/index.ts", "src/index.d.ts"]
}
